# Top-level filter (only include the following...)
^(?!(?:script|examples|lib|bin|t|xt|maint|sql)/|(?:(?:Makefile|Build)\.PL|README|README\.mdwn|LICENSE|MANIFEST|LOCALIZATION\.txt|Changes)$)

# Avoid temp and backup files.
~$
\.tmp$
\.old$
\.bak$
\..*?\.sw[po]$
\#$
\b\.#

# Avoid patch remnants
\.orig$
\.rej$
